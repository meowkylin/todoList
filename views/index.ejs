

<div style="background-color: #aaa; text-align:center">
	<h1 >Todolist</h1>

	  <form action="/api/create" method="post" accept-charset="utf-8">
	      <input class="input" type="text" name="content" >
	      <input class="input" type="date" name="deadline" >
	      <input type="submit" value="submit">
	  </form>

	 <ul>
		<% todos.forEach( function ( todo ){ %>
	   		<li>

	   		<b><%= todo.content %></b>
	   		<input type="button" value="Delete" onclick="window.open('/api/delete/<%= todo._id %>')">
	   		<br/>
	   		
	   		<em>Deadline=><em/> <%= todo.deadline %> 

	   <form action="/api/update/<%= todo._id %>" method="post" accept-charset="utf-8">
	      <input class="input" type="text" name="content" >
	      <input class="input" type="date" name="deadline" >
	      <input type="submit" value="update">
	  </form>
	   		</li>	  	  
		<% }); %>
	</ul>
</div>
